<%= link_to 'Back', posts_path %>

<hr>
<h2>Comments</h2>
<p> Write your comments:</p>
<%= render 'comments/form' %>

<% @post.comments.reverse.each do |comment| %>
  <% if !comment.new_record? %>
  <p>
    <%= comment.author %> said at <%= time_ago_in_words comment.created_at %>:<br>
    <%= comment.content %>
  </p>
  <% end %>
<% end %>
